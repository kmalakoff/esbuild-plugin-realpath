{
  "name": "esbuild-plugin-realpath",
  "version": "1.3.1",
  "description": "A plugin to resolve the fs.realpath for modules in monorepos targeting the browser and node",
  "keywords": [
    "esbuild",
    "plugin",
    "realpath",
    "npm",
    "yarn",
    "pnpm",
    "lerna",
    "monorepo",
    "react-native",
    "react-native-web"
  ],
  "license": "MIT",
  "author": "",
  "main": "dist/cjs/index.cjs",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsds build",
    "clean": "node -e \"const dir = require('path').join(require('homedir-polyfill')(), '.im'); try {require('fs').rmdirSync(dir, {recursive: true})} catch(err) {}\"",
    "deploy": "tsds deploy",
    "docs": "tsds docs",
    "format": "biome check --write --unsafe src/ test/",
    "test": "tsds test:node --no-timeouts",
    "test:engines": "nvu engines npm test",
    "version": "tsds version"
  },
  "dependencies": {
    "browser-resolve": "^2.0.0",
    "resolve": "^1.22.10",
    "resolve-once": "^0.6.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5",
    "esbuild": "^0.24.2",
    "fs-extra": "^11.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "engines": {
    "node": ">=16"
  },
  "tsds": {
    "source": "src/index.mjs",
    "targets": [
      "cjs"
    ]
  }
}
